  "cSpell.ignoreWords": ["PGHOST", "PGPASS", "PGUSER"],

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.accessibilitySupport": "off", // https://fig.io/docs/support/vscode-integration
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.fontSize": 14,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": false,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  // "editor.renderFinalNewline": "on",
  // "editor.renderWhitespace": "all",
  "editor.rulers": [
    120
  ],
  "editor.scrollBeyondLastLine": false, // recommended by vscode-neovim
  "editor.wordWrapColumn": 120,

  "emmet.includeLanguages": {
    "erb": "html"
  },

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "files.associations": {
    "*.yml.erb": "yaml",
    "*.yaml.lock": "yaml",
    "*.ejson": "json",
    "*.rb.tt": "erb",
    "*.erb": "ruby"
  },
  "files.exclude": {
    ".shadowenv.d": true
    // "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "githubPullRequests.pullBranch": "never",

  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.branches.branches.layout": "list",

  "markdown.extension.toc.updateOnSave": false,

  "projectManager.any.baseFolders": ["~/src/github.com"],
  "projectManager.any.maxDepthRecursion": 2,
  "projectManager.git.baseFolders": ["~/src/github.com"],
  "projectManager.git.maxDepthRecursion": 2,

  "rubocop-lsp.trace.server": "verbose",

  "sorbet.enabled": true,

  "search.exclude": {
    "log/": true,
    "tags/": true,
    "tmp/": true
  },
  "search.quickOpen.includeHistory": false,

  "security.workspace.trust.untrustedFiles": "open",

  // these apply only to rebornix.Ruby
  "ruby.useLanguageServer":  false,
  "ruby.locate": {
    "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
    "include": "**/*.rb"
  },
  // "ruby.useLanguageServer": true, // use the internal language server (see below)


  "task.quickOpen.history": 0,

  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.scrollback": 50000,
  "terminal.integrated.tabs.enabled": true,

  "testExplorer.showOnRun": true,

  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",

  "workbench.colorCustomizations": {
    "statusBar.background": "#af2828",
    "statusBar.noFolderBackground": "#af2828",
    "statusBar.foreground": "#ffffff"
  },
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "workbench.experimental.settingsProfiles.enabled": true,
  "rubyLsp.enableExperimentalFeatures": true,
  "workbench.startupEditor": "none",

  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": true,
  "zenMode.silentNotifications": false,
  "redhat.telemetry.enabled": false,
  "gitlens.mode.active": "zen",
  "editor.formatOnSaveTimeout": 100,
  "editor.semanticTokenColorCustomizations": {
    "[Default Dark+]": {
      "rules": {
        "type": {
          "foreground": "#efec08",
          "fontStyle": "italic"
        }
      }
    }
  },
  // "rubyTestExplorer.minitestDirectory": "./test/minitest",
  "rubyTestExplorer.logpanel": true,
  // "rubyTestExplorer.rspecCommand": "bin/rspec", // "ruboLocate" clashes with rubocop-lsp,
  // "devTestRunner.command": "bin/test",
  // "devTestRunner.rubyTestRunnerPath": "/Users/andyw8/src/github.com/andyw8/ruby-lsp",
  "workbench.editor.enablePreview": false,
  "githubPullRequests.pushBranch": "always",
  "workbench.preferredDarkColorTheme": "Default High Contrast Light",
  "workbench.colorTheme": "Spinel",
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "completion": true,
    "codeLens": true,
    "definition": true
  },
  "editor.snippets.codeActions.enabled": true,
  "rubyLsp.formatter": "auto",
  "[python]": {
    "editor.formatOnType": true
  },
  "rubyLsp.rubyVersionManager": "auto",
  "rdbg.rubyVersionManager": "shadowenv",
  "editor.stickyScroll.enabled": true,
  "editor.renderWhitespace": "all",
  "code-eol.crlfCharacter": "â†µ",
  "githubPullRequests.terminalLinksHandler": "github",
  "rubyLsp.branch": "main",
  "sorbet.highlightUntyped": true
}
