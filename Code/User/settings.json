{
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnType": true
  },

  "[json]": {
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "breadcrumbs.enabled": true,

  "byesig.enabled": true,
  "byesig.opacity": 0.5,
  "byesig.fold": false,
  "byesig.showIcon": false,

  "cSpell.dictionaries": ["ruby"],
  "cSpell.enabled": true,
  "cSpell.enableFiletypes": ["ruby", "erb"],
  "cSpell.spellCheckDelayMs": 500,
  "cSpell.userWords": [
    "activeresource",
    "adoc",
    "andyw",
    "asciidoctor",
    "autocorrectable",
    "automount",
    "autorun",
    "blockquote",
    "bootsnap",
    "Bugsnag",
    "byebug",
    "Cancancan",
    "carrierwave",
    "cheatsheet",
    "Chromedriver",
    "cooridinates",
    "datetime",
    "delegators",
    "dotenv",
    "downto",
    "Duplicative",
    "EASDK",
    "ejson",
    "erblint",
    "evented",
    "exts",
    "favorited",
    "figcaption",
    "fullpage",
    "getthingsright",
    "gorails",
    "graphiql",
    "Guardfile",
    "Habanero",
    "healthcheck",
    "hedwig",
    "hexdigest",
    "HMAC",
    "htmlbeautifier",
    "httparty",
    "instrumenter",
    "isogun",
    "javascripts",
    "jbuilder",
    "jewellery",
    "jquery",
    "Jumpstart",
    "kaminari",
    "kata",
    "katas",
    "klass",
    "kwargs",
    "lograge",
    "Mailcatcher",
    "MAILGUN",
    "Microservices",
    "monkeypatching",
    "mrkdwn",
    "Multitenancy",
    "myshopify",
    "Namespacing",
    "neovim",
    "nilable",
    "nofollow",
    "nums",
    "omniauth",
    "omniauthable",
    "openapi",
    "organisational",
    "overmind",
    "Pagy",
    "pghero",
    "PGPASSWORD",
    "pgsync",
    "Pockfile",
    "postgres",
    "precompiled",
    "preload",
    "Prepend",
    "prepending",
    "Preprocess",
    "preprocessors",
    "Ragnaros",
    "railsbytes",
    "Railties",
    "Rakefile",
    "readline",
    "Redcarpet",
    "referer",
    "resque",
    "rexml",
    "rollbar",
    "rubymine",
    "Ruleset",
    "runtimes",
    "samesite",
    "scripttags",
    "scrollback",
    "securerandom",
    "sendfile",
    "serializers",
    "shadowenv",
    "shadowenvs",
    "Shipit",
    "Sidekiq",
    "sidenav",
    "signout",
    "simplecov",
    "Solargraph",
    "Solargraph's",
    "standardrb",
    "Struct",
    "stylesheet",
    "submenu",
    "subquery",
    "sulfuras",
    "tailwindcss",
    "tbody",
    "testid",
    "thead",
    "themekit",
    "timecop",
    "titleize",
    "tldr",
    "tobi",
    "tophat",
    "Tophatting",
    "turbolinks",
    "typecheck",
    "Unactioned",
    "unallowed",
    "unpermitted",
    "unprocessable",
    "Untriaged",
    "unversioned",
    "upsert",
    "upstreamed",
    "Zeitwerk"
