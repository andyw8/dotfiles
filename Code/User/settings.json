{
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Shopify.rubocop-lsp"
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "breadcrumbs.enabled": true,

  "byesig.opacity": 0.3,
  "byesig.fold": false,
  "byesig.showIcon": false,

  "cSpell.enabled": true,
  "cSpell.enableFiletypes": ["ruby", "erb"],
  "cSpell.userWords": [
    "activerecord",
    "adoc",
    "asciidoctor",
    "automount",
    "autorun",
    "blockquote",
    "bootsnap",
    "Bugsnag",
    "carrierwave",
    "cheatsheet",
    "Chromedriver",
    "datetime",
    "delegators",
    "downcase",
    "ejson",
    "erblint",
    "exts",
    "favorited",
    "figcaption",
    "graphiql",
    "Guardfile",
    "healthcheck",
    "hedwig",
    "hexdigest",
    "htmlbeautifier",
    "instrumenter",
    "javascripts",
    "jquery",
    "kata",
    "klass",
    "MAILGUN",
    "minitest",
    "mrkdwn",
    "nilable",
    "nofollow",
    "omniauth",
    "omniauthable",
    "overmind",
    "Pagy",
    "pghero",
    "Pockfile",
    "postgres",
    "precompiled",
    "preload",
    "Prepend",
    "prepending",
    "Preprocess",
    "Rakefile",
    "Redcarpet",
    "resque",
    "rexml",
    "rspec",
    "rubocop",
    "runtimes",
    "serializers",
    "Shipit",
    "Sidekiq",
    "sidenav",
    "signout",
    "simplecov",
    "Solargraph",
    "Solargraph's",
    "standardrb",
    "Struct",
    "stylesheet",
    "submenu",
    "subquery",
    "tailwindcss",
    "tbody",
    "thead",
    "themekit",
    "timecop",
    "titleize",
    "tldr",
    "tobi",
    "turbolinks",
    "Unactioned",
    "unallowed",
    "unpermitted",
    "unprocessable",
    "Untriaged",
    "unversioned",
    "webmock",
    "Zeitwerk"
  ],
  "cSpell.ignoreWords": ["PGHOST", "PGPASS", "PGUSER"],

  "diffEditor.ignoreTrimWhitespace": false,

  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "solid",
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.renderFinalNewline": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [120],
  "editor.scrollBeyondLastLine": false, // recommended by vscode-neovim
  "editor.wordWrapColumn": 120,

  "emmet.includeLanguages": {
    "erb": "html",
    "ruby": "html"
  },

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "files.associations": {
    "*.yml.erb": "yaml",
    "*.yaml.lock": "yaml",
    "*.ejson": "json"
  },
  "files.exclude": {
    ".shadowenv.d": true
    // "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": false,

  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.branches.branches.layout": "list",

  "markdown.extension.toc.updateOnSave": false,

  "projectManager.any.baseFolders": ["~/src/github.com"],
  "projectManager.any.maxDepthRecursion": 2,
  "projectManager.git.baseFolders": ["~/src/github.com"],
  "projectManager.git.maxDepthRecursion": 2,

  "rubocop-lsp.trace.server": "verbose",

  "rubyTestExplorer.logpanel": true,
  "rubyTestExplorer.rspecCommand": "bin/rspec",

  "ruby.intellisense": false, // "ruboLocate" clashes with rubocop-lsp
  "ruby.codeCompletion": false, // "ruboLocate" clashes with rubocop-lsp
  "ruby.locate": {
    "exclude": "{**/@(test|spec|tmp|.*),**/@(test|spec|tmp|.*)/**,**/*_spec.rb}",
    "include": "**/*.rb"
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.lint": {
    "rubocop": false // prevent clash with rubocop-lsp
  },
  // "ruby.useLanguageServer": true, // use the internal language server (see below)
  "sorbet.enabled": true,

  "search.exclude": {
    "log/": true,
    "tags/": true,
    "tmp/": true
  },
  "search.quickOpen.includeHistory": false,

  "security.workspace.trust.untrustedFiles": "open",

  // "solargraph.useBundler": true,
  "solargraph.logLevel": "debug",
  "solargraph.commandPath": "bin/solargraph",
  "solargraph.transport": "stdio", // https://github.com/castwide/solargraph/issues/219

  "task.quickOpen.history": 0,

  "terminal.integrated.defaultLocation": "editor",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.tabs.enabled": true,

  "testExplorer.showOnRun": true,

  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",

  "window.zoomLevel": -1,
  "window.openFoldersInNewWindow": "on",

  "workbench.colorCustomizations": {
    "statusBar.background": "#af2828",
    "statusBar.noFolderBackground": "#af2828",
    "statusBar.foreground": "#ffffff"
  },
  "workbench.editorAssociations": {
    "git-rebase-todo": "default"
  },
  "workbench.startupEditor": "none",

  "zenMode.restore": true,
  "zenMode.silentNotifications": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "zenMode.centerLayout": false
}
